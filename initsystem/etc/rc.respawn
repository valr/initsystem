export PATH=/opt/busybox

################################################################################
# sanity check #################################################################
################################################################################

if [ $PPID != 1 ]; then
  echo "respawn: this script should have ppid 1"
  exit 1
fi

################################################################################
# respawn commands #############################################################
################################################################################

exec getty -l "$PATH"/login 38400 tty"$1" linux

