# Howto extract the initramfs content:
#   gunzip initramfs-linux.cpio.gz
#   busybox cpio -i -d -H newc -F initramfs-linux.cpio

export PATH=/opt/busybox
export LC_ALL=C

while [ $# -gt 0 ]; do
  if [[ "$1" == *.gz ]]; then
    gunzip -c "$1" | cpio -it 2>/dev/null | sort
  else
    cpio -it < "$1" 2>/dev/null | sort
  fi
  shift
done

# vim: set filetype=sh:
